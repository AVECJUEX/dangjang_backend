<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="FBComment">

	
	<insert id="fbcommentinsert" parameterType="FBCommentDto">
		insert into fb_commnet
		(	
			user_seq,
			free_seq,
			content,
			wdate,
		)
		values
		(#{user_seq},#{free_seq}, #{content}, now())
	</insert>
	
	
	<select id="FBComment_getList" parameterType="FBCommentDto"  resultType="FBCommentDto">
	 select A.* 
	 	from user u join fb_comment A on A.user_seq=u.user_seq 
	 		where A.free_seq=#{free_seq}
	 		order by review_seq desc
	 		 limit #{start}, #{pageSize}
	</select>
	
	
	<select id="Comment_count" parameterType="FBCommentDto" resultType="Integer">
		select count(*) from review_tbl where board_seq=#{board_seq} and category_code=#{category_code}
	</select>
	
	<delete id="Comment_delete" parameterType="String">
		delete from review_tbl where review_seq=#{review_seq}
	</delete> 
	
