<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Member">

	<!-- 쿼리를 xml로 작성하고 id:식별값 parameterType:우리가 전달할값 resultType : 받아오는값 -->

	<!-- if test="key=='1'" - 이렇게 쓰면 안된다 인식안된다 -->


	<select id="Member_isduplicate" parameterType="MemberDto"
		resultType="Integer">
		select count(*) from member
		where userid=#{userid}
	</select>


	<select id="Member_getInfo" parameterType="MemberDto"
		resultType="MemberDto">
		select
		user_seq,
		userid,
		password,
		name,
		email,
		wdate,
		nick_name,
		phone,
		zipcode,
		address1,
		address2,
		role,
		images
		from member
		where userid=#{userid}
	</select>

	<select id="Member_findid" parameterType="MemberDto"
		resultType="MemberDto">
		select
		user_seq,
		userid,
		password,
		name,
		email,
		wdate,
		nick_name,
		phone,
		zipcode,
		address1,
		address2,
		role,
		images
		from member
		where email=#{email} and phone=#{phone}
	</select>

	<select id="Member_findpassword" parameterType="MemberDto"
		resultType="MemberDto">
		
	</select>

	<update id="Member_updateInfo" parameterType="MemberDto">
		update
		member set
		,email=#{email}
		,phone=#{phone}
		,address1=#{address1}
		,address2 = #{address2}
		,zipcode = #{zipcode}
		,images = #{images}
		,nick_name=#{nick_name}
		where userid=#{userid}
	</update>
	

</mapper>




















